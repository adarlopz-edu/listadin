<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardview"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_height="360dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/futbol"
                        android:alpha=".35">

                    </ImageView>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre Equipo"
                        android:padding="5dp"
                        android:textSize="25sp">
                    </TextView>
                    <TextView
                        android:id="@+id/p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntos"
                        android:padding="5dp"
                        android:textSize="25sp">
                    </TextView>
                    <TextView
                        android:id="@+id/jj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos Jugados"
                        android:padding="5dp"
                        android:textSize="25sp">
                    </TextView>
                    <TextView
                        android:id="@+id/jg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos Ganados"
                        android:padding="5dp"
                        android:textSize="25sp">
                    </TextView>
                    <TextView
                        android:id="@+id/je"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos Empatados"
                        android:padding="5dp"
                        android:textSize="25sp">
                    </TextView>
                    <TextView
                        android:id="@+id/noe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No contacto Equipo"
                        android:padding="5dp"
                        android:textSize="25sp">
                    </TextView>

                    <Button
                        android:id="@+id/llamar"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="llamar"
                        android:onClick="llamar"
                        app:icon="@drawable/icon"
                        android:padding="5dp"
                        android:textSize="20sp">
                    </Button>
                </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>